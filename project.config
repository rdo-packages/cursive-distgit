[project]
	description = Packaging content for openstack/cursive (distgit)
[access "refs/*"]
  read = group openstack/cursive-distgit-core
  owner = group openstack/cursive-distgit-ptl
[access "refs/heads/*"]
	label-Code-Review = -2..+2 group openstack/cursive-distgit-core
	label-Code-Review = -2..+2 group openstack/cursive-distgit-ptl
	label-Verified = -2..+2 group openstack/cursive-distgit-ptl
	label-Workflow = -1..+1 group openstack/cursive-distgit-core
	label-Workflow = -1..+1 group openstack/cursive-distgit-ptl
	label-Workflow = -1..+0 group Registered Users
	submit = group openstack/cursive-distgit-ptl
	read = group openstack/cursive-distgit-core
    read = group Registered Users
[access "refs/meta/config"]
    read = group openstack/cursive-distgit-core
    read = group Registered Users
[receive]
	requireChangeId = true
[submit]
	mergeContent = false
	action = fast forward only
